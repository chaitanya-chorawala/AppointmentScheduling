@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>Sign Up</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            <form method="post" asp-action="Register">                
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group row">
                    <label class="col-md-3" asp-for="Name"></label>
                    <div class="col-md-6">
                        <input asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3" asp-for="Email"></label>
                    <div class="col-md-6">
                        <input asp-for="Email" class="form-control"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3" asp-for="Password"></label>
                    <div class="col-md-6">
                        <input asp-for="Password" class="form-control"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3" asp-for="ConfirmPassword"></label>
                    <div class="col-md-6">
                        <input asp-for="ConfirmPassword" class="form-control"/>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>                
                <div class="form-group row">
                    <label class="col-md-3" asp-for="RoleName"></label>
                    <div class="col-md-6">
                        <select asp-for="RoleName" asp-items="Helper.GetRolesForDropDown()" class="form-control"></select>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">                    
                    <div class="col-md-3 offset-md-3">
                        <input type="submit" value="Sign Up" class="btn btn-primary w-100"/>                        
                    </div>
                    <div class="col-md-3">
                        <a asp-action="Login" class="btn btn-success w-100">Sign In</a>                        
                    </div>
                </div>                
            </form>
        </section>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}