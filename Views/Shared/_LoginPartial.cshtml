@inject SignInManager<ApplicationUser> signInManager
@if(!signInManager.IsSignedIn(User)){
    <ul class="nav navbar-nav">
        <li>
            <a asp-action="Register" asp-controller="Account" class="nav-link btn btn-success mr-2">Sign Up</a>
        </li>
        <li>
            <a asp-action="Login" asp-controller="Account" class="nav-link btn btn-primary">Sign In</a>
        </li>
    </ul>
} else {
    <form id="formLogout" asp-action="Logout" asp-controller="Account">
        <ul class="nav navbar-nav text-white">
            <li class="nav-link">Hello, @User.Identity.Name!</li>
            <li><input type="submit" value="Logout" class="nav-link btn btn-warning" /></li>
        </ul>
    </form>
}